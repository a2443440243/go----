# Go API Scaffold 环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置值

# 应用配置
API_APP_NAME=go-api-scaffold
API_APP_VERSION=1.0.0
API_APP_ENVIRONMENT=development

# 服务器配置
API_SERVER_PORT=8080
API_SERVER_READ_TIMEOUT=30
API_SERVER_WRITE_TIMEOUT=30
API_SERVER_IDLE_TIMEOUT=60

# 数据库配置
API_DATABASE_DRIVER=postgres
API_DATABASE_HOST=localhost
API_DATABASE_PORT=5432
API_DATABASE_USERNAME=postgres
API_DATABASE_PASSWORD=your_password_here
API_DATABASE_DATABASE=go_api_scaffold
API_DATABASE_SSL_MODE=disable
API_DATABASE_MAX_OPEN_CONNS=100
API_DATABASE_MAX_IDLE_CONNS=10
API_DATABASE_CONN_MAX_LIFETIME=3600

# 日志配置
API_LOG_LEVEL=info
API_LOG_FORMAT=json
API_LOG_OUTPUT=stdout

# Redis配置（可选）
API_REDIS_HOST=localhost
API_REDIS_PORT=6379
API_REDIS_PASSWORD=
API_REDIS_DB=0